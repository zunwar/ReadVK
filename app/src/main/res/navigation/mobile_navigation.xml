<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_news_feed">

    <fragment
        android:id="@+id/navigation_news_feed"
        android:name="com.example.readvk.ui.NewsFeed.NewsFeedFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_news_feed" />

    <fragment
        android:id="@+id/navigation_friends"
        android:name="com.example.readvk.ui.friends.FriendsFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_friends" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.readvk.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>